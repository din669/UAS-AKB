<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.DetailAlamActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="299sp"
        android:backgroundTint="@color/white"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardview_list_alam"
        android:layout_marginTop="295sp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20sp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:scaleType="centerCrop"
                android:background="@color/ActionBar"
                android:id="@+id/img_data_alam"
                android:layout_width="match_parent"
                android:layout_height="230sp"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="Judul"
                android:textSize="40sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:id="@+id/tv_nama_data_alam"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:text="Pemrograman adalah suatu cara dalam membuat satu atau menghubungkan lebih dari satu algoritma dengan menggunakan suatu bahasa pemrograman tertentu sehingga menjadi suatu program komputer. Ada banyak bahasa pemrograman yang dapat digunakan seperti bahasa C, C++, Java, Phyton, dan lain-lain."
                android:textSize="14sp"
                android:justificationMode="inter_word"
                android:id="@+id/tv_desc_data_alam"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>