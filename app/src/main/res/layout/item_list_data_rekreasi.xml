<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="15dp"
    android:paddingVertical="2dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:padding="8dp"
        app:cardCornerRadius="12sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_data_rekreasi"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:background="@color/Biru1"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:scaleType="center"/>
            <TextView
                android:id="@+id/tv_nama_data_rekreasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="15sp"
                android:layout_toEndOf="@+id/img_data_rekreasi"
                android:layout_toRightOf="@+id/img_data_rekreasi"
                android:text="Judul"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Deskripsi"
                android:textColor="@color/black"
                android:maxLines="4"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="15sp"
                android:id="@+id/tv_desc_data_rekreasi"
                android:layout_toRightOf="@+id/img_data_rekreasi"
                android:layout_below="@id/tv_nama_data_rekreasi"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>